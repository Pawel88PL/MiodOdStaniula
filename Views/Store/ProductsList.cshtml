@model IEnumerable<MiodOdStaniula.Models.Product>
<link rel="stylesheet" href="~/css/store.css" asp-append-version="true" />

@{
    ViewData["Title"] = "Produkty";
}


<section class="border text-center shadow p-3 mb-5 rounded" style="background-color: #eee;">
    <div class="text-center container py-5">

        <img src="~/img/logo.png" class="img-fluid" alt="Responsive image" style="max-width: 600px" />


        <div class="row">
            @foreach (var product in Model.OrderBy(x => x.Priority))
            {
                <div class="col-lg-3 col-md-12 mb-4">
                    <a href="@Url.Action("Details","Products", new { Id = product.Id})"
                       style="text-decoration:none; color:black">
                        <div class="card">
                            <div class="bg-image hover-zoom ripple ripple-surface ripple-surface-light"
                                 data-mdb-ripple-color="light">
                                <img src="~/img/@product.Photo" class="w-100" />
                            </div>
                            <div class="card-body">
                                <div>
                                    <h5 class="card-title mb-3">@product.Name</h5>
                                    <p>Kategoria: <b>@product.Category</b></p>
                                </div>
                                <div class="row">
                                    @if (product.AmountAvailable == 0)
                                    {
                                        <div class="col-6">
                                            <p>Waga: <b>@product.Weight g</b></p>
                                        </div>
                                        <div class="col-6">
                                            <p>Cena: <b>@product.Price,00 zł</b></p>
                                        </div>
                                        <div class="row outOfOrder">
                                            <div class="col-9">
                                                <h6>Produkt niedostępny</h6>
                                            </div>
                                            <div class="col-3">
                                                <img src="/img/outOfOrder.png" style="max-width: 40px">
                                            </div>
                                        </div>
                                    }
                                    else if (product.AmountAvailable > 0 & product.AmountAvailable < 10)
                                    {
                                        <div class="col-6">
                                            <p>Waga: <b>@product.Weight g</b></p>
                                        </div>
                                        <div class="col-6">
                                            <p>Cena: <b>@product.Price,00 zł</b></p>
                                        </div>
                                        <div class="row smallAmount">
                                            <div class="col-9">
                                                <h6>Mała ilość</h6>
                                            </div>
                                            <div class="col-3">
                                                <img src="/img/smallAmount.png" style="max-width: 40px">
                                            </div>
                                        </div>
                                    }
                                    else if (product.AmountAvailable >= 10)
                                    {
                                        <div class="col-6">
                                            <p>Waga: <b>@product.Weight g</b></p>
                                        </div>
                                        <div class="col-6">
                                            <p>Cena: <b>@product.Price,00 zł</b></p>
                                        </div>
                                        <div class="row available">
                                            <div class="col-9">
                                                <h6>Duże zapasy</h6>
                                            </div>
                                            <div class="col-3">
                                                <img src="/img/available.png" style="max-width: 40px">
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>
</section>
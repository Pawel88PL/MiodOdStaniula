@model MiodOdStaniula.Models.CartViewModel
<link rel="stylesheet" href="~/css/ProductDetails.css" asp-append-version="true" />

<div class="row mt-5">
    <div class="col-sm-8">
        <h4>Koszyk</h4>
        <table class="table mt-3">
            <thead>
            </thead>
            <tbody>
                @if (Model.CartItems != null)
                {
                    @foreach (var item in Model.CartItems)
                    {
                        <tr>
                            <td>
                                <img src="@item?.Product?.PhotoUrlAddress" alt="@item?.Product?.Name" width="50" height="50" />
                            </td>
                            <td>@item?.Product?.Name</td>
                            <td>@item?.Quantity</td>
                            <td>@item?.Product?.Price.ToString("C2")</td>
                            <td>
                                <form asp-action="DeleteItemFromCartAsync" asp-controller="Cart" 
                                    asp-route-productId="@item?.Product?.ProductId" method="post">
                                    <input type="hidden" name="productId" value="@item?.Product?.ProductId" />
                                    <button type="submit" class="btn btn-danger"><i class="bi bi-trash3"></i></button>
                                </form>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
    <div class="col-sm-4">
        <h4>Podsumowanie</h3>
            <br>
            <div class="row">
                <div class="col-sm-7">
                    <p>Suma częściowa:</p>
                    <p>Szacowany koszt wysyłki:</p>
                </div>
                <div class="col-sm-5 d-flex flex-column align-items-end">
                    <div>
                        <p>@Model.ProductCost.ToString("C2")</p>
                    </div>
                    <div>
                        <p>@Model.ShippingCost.ToString("C2")</p>
                    </div>
                </div>
            </div>

            <hr>
            <div class="row">
                <div class="col-sm-7">
                    <p>Suma:</p>
                </div>
                <div class="col-sm-5 d-flex flex-column align-items-end">
                    <p>@Model.TotalCost.ToString("C2")</p>
                </div>
            </div>
            <hr>
            <div class="col-sm-12">
                <a href="~/Cart/Checkout" class="btn btn-lg btn-dark mt-2">Przejdź do kasy</a>
            </div>
    </div>
</div>



@model MiodOdStaniula.Models.Product

<link rel="stylesheet" href="~/css/create.css" asp-append-version="true" />

@{
    ViewData["Title"] = "Dodaj produkt";
}

<div class="container">
    <div class="row">
        <div class="border shadow p-3 bg-white rounded" style="max-width: 800px">
            <form asp-action="AddProduct">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="col-sm-5">
                        <div class="form-group">
                            <p><b>Kategoria</b></p>
                            <select asp-for="CategoryId" class="form-select">
                                <option value="1">Miód naturalny</option>
                                <option value="2">Miód samakowy</option>
                                <option value="3">Zestaw miodów</option>
                                <option value="3">Produkt pszczeli</option>
                            </select>
                        </div>
                        <br />

                        <div class="form-group">
                            <p><b>Nazwa produktu</b></p>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <br />
                        
                        <div class="form-group">
                            <p><b>Cena</b></p>
                            <input asp-for="Price" class="form-control" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                        <br />

                        <div class="form-group">
                            <p><b>Waga</b></p>
                            <input asp-for="Weight" class="form-control" />
                            <span asp-validation-for="Weight" class="text-danger"></span>
                        </div>
                        <br />

                        <div class="form-group">
                            <p><b>Dostępna ilość</b></p>
                            <input asp-for="AmountAvailable" class="form-control" />
                            <span asp-validation-for="AmountAvailable" class="text-danger"></span>
                        </div>
                        <br />

                        <div class="form-group">
                            <p><b>Kolejność wyświetlania na stronie</b></p>
                            <input asp-for="Priority" class="form-control" />
                            <span asp-validation-for="Priority" class="text-danger"></span>
                        </div>
                        <br />

                        <div class="form-group">
                            <p><b>Nazwa pliku ze zdjęciem</b></p>
                            <input asp-for="PhotoUrlAddress" class="form-control" />
                            <span asp-validation-for="PhotoUrlAddress" class="text-danger"></span>
                        </div>
                        <br />
                    </div>

                    <div class="col-sm-7">
                        <div class="form-group">
                            <p><b>Opis produktu</b></p>
                            <textarea class="form-control" id="Description" name="Description" rows="27"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <br />

                        <div class="form-group text-lg-end">
                            <button type="submit" class="btn btn-primary mt-3">DODAJ PRODUKT</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
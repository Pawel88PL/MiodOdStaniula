@model MiodOdStaniula.Models.Product
<link rel="stylesheet" href="~/css/store.css" asp-append-version="true" />

@{
    ViewData["Title"] = Model.Name;
}

<div class="container">
  <div class="row">
    <div class="col-sm-8">
      <div class="border shadow p-3 bg-white rounded">
        <form asp-action="Edit">
          <div asp-validation-summary="ModelOnly" class="text-danger"></div>
          <input type="hidden" asp-for="ProductId" />
          <div class="row">
            <div class="col-sm-5">
              <div class="form-group">
                <p><b>Kategoria</b></p>
                <select asp-for="CategoryId" class="form-select">
                  <option value="1">Miody naturalne</option>
                  <option value="2">Miody smakowe</option>
                  <option value="3">Zestawy miodów</option>
                  <option value="4">Produkty pszczele</option>
                </select>
              </div>
              <br />

              <div class="form-group">
                <p><b>Nazwa produktu</b></p>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
              </div>
              <br />

              <div class="form-group">
                <p><b>Cena</b></p>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
              </div>
              <br />

              <div class="form-group">
                <p><b>Waga</b></p>
                <input asp-for="Weight" class="form-control" />
                <span asp-validation-for="Weight" class="text-danger"></span>
              </div>
              <br />

              <div class="form-group">
                <p><b>Dostępna ilość</b></p>
                <input asp-for="AmountAvailable" class="form-control" />
                <span
                  asp-validation-for="AmountAvailable"
                  class="text-danger"
                ></span>
              </div>
              <br />

              <div class="form-group">
                <p><b>Kolejność wyświetlania na stronie</b></p>
                <input asp-for="Priority" class="form-control" />
                <span asp-validation-for="Priority" class="text-danger"></span>
              </div>
              <br />

              <div class="form-group">
                <p><b>Nazwa pliku ze zdjęciem</b></p>
                <input asp-for="PhotoUrlAddress" class="form-control" />
                <span
                  asp-validation-for="PhotoUrlAddress"
                  class="text-danger"
                ></span>
              </div>
              <br />
            </div>

            <div class="col-sm-7">
              <div class="form-group">
                <p><b>Opis produktu</b></p>
                <textarea
                  class="form-control"
                  id="Description"
                  name="Description"
                  rows="27"
                >
                                    @Model.Description</textarea
                >
                <span
                  asp-validation-for="Description"
                  class="text-danger"
                ></span>
              </div>
              <br />

              <div class="row">
                <div class="col-6">
                  <button type="submit" class="btn btn-primary mt-3">
                    Zapisz zmiany
                  </button>
                </div>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

@model MiodOdStaniula.Models.Product

<link rel="stylesheet" href="~/css/create.css" asp-append-version="true" />

@{
    ViewData["Title"] = "Dodaj produkt";
}

<div class="container">
    <div class="row">
        <div class="col-md-7 border shadow p-3 bg-white rounded">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="col-5">
                        <div class="form-group">
                            <p><b>Kategoria</b></p>
                            <select asp-for="Category" class="form-select">
                                <option>Miody naturalne</option>
                                <option>Miody samakowe</option>
                                <option>Produkty pszczele</option>
                            </select>

                        </div>
                        <br />

                        <div class="form-group">
                            <p><b>Nazwa produktu</b></p>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <br />

                        <div class="form-group">
                            <p><b>Cena</b></p>
                            <input asp-for="Price" class="form-control" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                        <br />

                        <div class="form-group">
                            <p><b>Waga</b></p>
                            <input asp-for="Weight" class="form-control" />
                            <span asp-validation-for="Weight" class="text-danger"></span>
                        </div>
                        <br />

                        <div class="form-group">
                            <p><b>Dostępna ilość</b></p>
                            <input asp-for="AmountAvailable" class="form-control" />
                            <span asp-validation-for="AmountAvailable" class="text-danger"></span>
                        </div>
                        <br />

                        <div class="form-group">
                            <p><b>Kolejność wyświetlania na stronie</b></p>
                            <input asp-for="Priority" class="form-control" />
                            <span asp-validation-for="Priority" class="text-danger"></span>
                        </div>
                        <br />

                        <div class="form-group">
                            <p><b>Nazwa pliku ze zdjęciem</b></p>
                            <input asp-for="Photo" class="form-control" />
                            <span asp-validation-for="Photo" class="text-danger"></span>
                        </div>
                        <br />
                    </div>



                    <div class="col-7">
                        <div class="form-group">
                            <p><b>Opis produktu</b></p>
                            <textarea class="form-control" id="Description" rows="27"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <br />

                        <div class="form-group text-lg-end">
                            <button type="submit" class="btn btn-primary mt-3">DODAJ PRODUKT</button>
                        </div>
                    </div>
                </div>

            </form>
        </div>
    </div>

</div>
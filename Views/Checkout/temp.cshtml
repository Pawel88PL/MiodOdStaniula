@*

<div class="col-md-4 cart">
            <h4>Twój koszyk</h3>
                <br>
                <div class="row mt-1">
                    <div class="col-7">
                        <p>Suma częściowa:</p>
                        <p>Szacowany koszt wysyłki:</p>
                    </div>
                    <div class="col-5 d-flex flex-column align-items-end">
                        <div>
                            <p>@Model.ProductCost.ToString("C2")</p>
                        </div>
                        <div>
                            <p>@Model.ShippingCost.ToString("C2")</p>
                        </div>
                    </div>
                </div>

                <hr>
                <div class="row">
                    <div class="col-7">
                        <h4>Suma:</h4>
                    </div>
                    <div class="col-5 d-flex flex-column align-items-end">
                        <h4>@Model.TotalCost.ToString("C2")</h4>
                    </div>
                </div>
                @if (Model.CartItems != null)
                {
                    @foreach (var item in Model.CartItems)
                    {
                        <div class="row mt-3">
                            <div class="col-6 col-sm-3">
                                <img src="@item?.Product?.ProductImages?.FirstOrDefault()?.ImagePath" alt="@item?.Product?.Name"
                                    class="w-75 shadow rounded-3" />
                            </div>
                            <div class="col-6 col-sm-6">
                                <div>
                                    <h5>@item?.Product?.Name</h5>
                                </div>
                                <div class="row mt-3">
                                    <div class="col-4">
                                        <div class="row">
                                            <div class="col-8 col-sm-7">
                                                <p>Ilość: @item?.Quantity za @item?.Product?.Price.ToString("C2")</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-sm-3">
                                @{
                                    var totalItemPrice = item?.Product?.Price * item?.Quantity;
                                }
                                <h5>@(totalItemPrice.HasValue ? totalItemPrice.Value.ToString("C2") : "N/A")</h5>
                            </div>
                        </div>
                        <hr />
                    }
                }
        </div>

*@